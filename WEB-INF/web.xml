<web-app>

    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/view/index.jsp</jsp-file>
    </servlet>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/WEB-INF/view/home.jsp</jsp-file>
    </servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
    
    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/WEB-INF/classes/controller/logout.jsp</jsp-file>
    </servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
    
    <servlet>
		<servlet-name>logincontrol</servlet-name>
		<servlet-class>controller.LoginControl</servlet-class>
	</servlet>
    <servlet-mapping>
		<servlet-name>logincontrol</servlet-name>
		<url-pattern>/logincontrol</url-pattern>
	</servlet-mapping>
    
	<servlet>
		<servlet-name>global</servlet-name>
		<servlet-class>controller.global</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>global</servlet-name>
		<url-pattern>/abc/*</url-pattern>
	</servlet-mapping>
    
    <servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>controller.login.logInController</servlet-class>
	</servlet>
    
    <servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login/controller</url-pattern>
	</servlet-mapping>
    
    <servlet>
        <servlet-name>logInit</servlet-name>
        <jsp-file>/WEB-INF/view/login/initial.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
		<servlet-name>logInit</servlet-name>
		<url-pattern>/login/view.html</url-pattern>
	</servlet-mapping>
    
</web-app>